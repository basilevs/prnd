-@ val it: prnd.Publication
-@ val authors: Iterable[prnd.Author]
-@ val editable: Boolean = false
- attributes("title") = it.title
%p
	= view(it.publisher.single)
	= it.year.toString
%p
	-for(g <- it.groups)
		= view(g)
%p
	Полное число авторов:
	= it.authorCount
-if (editable)
	%p
		%a(href={it.id+"/edit"}) Редактировать
%h2
	Авторы
-for (a <- authors)
	%li
		-view(a)




